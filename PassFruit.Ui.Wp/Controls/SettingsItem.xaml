<UserControl x:Class="PassFruit.Ui.Wp.Controls.SettingsItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    d:DesignHeight="100" d:DesignWidth="480" MouseLeftButtonUp="UserControl_MouseLeftButtonUp">
    
    <Grid x:Name="LayoutRoot">
        <StackPanel Margin="0,0,0,17" Width="Auto" Height="Auto">
            <TextBlock Text="{Binding Title}" Height="60" TextWrapping="Wrap" Style="{StaticResource PhoneTextExtraLargeStyle}"/>
            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="12,-6,12,0" Height="30" Style="{StaticResource PhoneTextSubtleStyle}"/>
        </StackPanel>
    </Grid>
    
</UserControl>
